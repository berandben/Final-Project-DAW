{% extends 'layout.html.twig' %}

{% block title %}Fincas{% endblock %}

{% block section %}
    <div class="container">
        {% if app.session.flashBag.has('estado') %}
            {% set mensajes = app.session.flashBag.get('estado') %}
            {% for mensaje in mensajes %}
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                    {{ mensaje }}
                </div>
            {% endfor %}
        {% endif %}
        {% if app.session.flashBag.has('error') %}
            {% set mensajes = app.session.flashBag.get('error') %}
            {% for mensaje in mensajes %}
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                    {{ mensaje }}
                </div>
            {% endfor %}
        {% endif %}
    </div>
    <div class="container">
        <h2>Fincas</h2>
        <a href="{{ path('principal') }}" class="btn btn-default">
            <i class="fa fa-home"></i> Ir a principal
        </a>
        <a href="{{ path('fincas_nueva') }}" class="btn btn-default">
            <i class="fa fa-plus"></i> Nueva finca
        </a>
    </div>
    <div class="container">
        <table class="table table-bordered table-striped table-hover">
            <thead>
            <tr>
                <th>Referencia catastral</th>
                <th>Propietario</th>
                <th>% prop.</th>
                <th>Arrendatario</th>
                <th>% arr.</th>
                <th>Variedad</th>
                <th>Nº Plantas</th>
                <th>Regadío</th>
                {% if is_granted('ROLE_ADMINISTRADOR') %}
                <th></th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for finca in fincas %}
                {% if finca.municipio < 100 %}
                    {% set refCatastral = finca.provincia ~ 0 ~ finca.municipio ~ finca.sector ~ finca.poligono ~ finca.parcela ~ finca.idInmueble ~ finca.caracterControl %}
                {% else %}
                    {% set refCatastral = finca.provincia ~ finca.municipio ~ finca.sector ~ finca.poligono ~ finca.parcela ~ finca.idInmueble ~ finca.caracterControl %}
                {% endif %}
                <tr>
                    <td>
                        <a href="https://www1.sedecatastro.gob.es/CYCBienInmueble/OVCConCiud.aspx?UrbRus=R&RefC={{ refCatastral }}&esBice=&RCBice1=&RCBice2=&DenoBice=&del={{ finca.provincia }}&mun={{ finca.municipio }}"
                           target="_blank" title="ir a los datos catastrales">
                            {{ refCatastral }}
                        </a>
                    </td>
                    <td>
                        {{ finca.propietario }}
                    </td>
                    <td>{{ finca.partPropietario * 100 }} %</td>
                    <td>{% if finca.arrendatario != null %}
                            {{ finca.arrendatario }}
                        {% endif %}
                    </td>
                    <td>{{ finca.partArrend * 100 }} %</td>
                    <td>{{ finca.variedad }}</td>
                    <td>{{ finca.numPlantas }}</td>
                    <td>{% if finca.regadio == 1 %}
                            Sí
                        {% else %}
                            No
                        {% endif %}
                    </td>
                    {% if is_granted('ROLE_ADMINISTRADOR') %}
                        <td>
                            <a href="{{ path('fincas_modificar', {'finca' : finca.id }) }}" class="btn btn-default">
                                <i class="fa fa-pencil"></i> Modificar datos
                            </a>
                            <a href="{{ path('fincas_eliminar', {'finca' : finca.id }) }}" class="btn btn-default">
                                <i class="fa fa-trash"></i> Dar de baja
                            </a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}