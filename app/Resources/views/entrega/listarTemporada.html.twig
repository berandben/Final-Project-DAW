{% extends 'layout.html.twig' %}

{% block title %}Entregas{% endblock %}

{% block section %}
    <div class="container">
        {% if app.request == path('principal') %}
            <h2>Temporada: {{ temporada }}</h2>
        {% endif %}
        {% if app.request == path('lotes_listar') %}
            <h2>Lote: {{ lote }}</h2>
        {% endif %}
    </div>
    <div class="container">
        <table class="table table-bordered table-striped table-hover">
            <thead>
            <tr>
                <th>NÂº</th>
                <th>Fecha</th>
                <th>Propietario</th>
                <th>Arrendatario</th>
                <th>Kg Aceituna</th>
                <th>Rendimiento %</th>
                <th>Kg Aceite</th>
                <th>Procedencia %</th>
                <th>Aceite</th>
            </tr>
            </thead>
            <tbody>
            {% for entrega in entregas %}
                <tr>
                    <td>{{ entrega.id }}</td>
                    <td>{{ entrega.fecha|date('d/m/Y') }}</td>
                    <td>{{ entrega.finca.propietario }}</td>
                    <td>{{ entrega.finca.arrendatario }}</td>
                    <td>{{ entrega.peso }}</td>
                    <td>{{ entrega.rendimiento * 100 }}</td>
                    <td>{{ entrega.peso * entrega.rendimiento }}</td>
                    <td>{{ entrega.procedencia}}</td>
                    <td>
                        {% if entrega.lote != null %}
                            {{ entrega.lote.aceite }}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}