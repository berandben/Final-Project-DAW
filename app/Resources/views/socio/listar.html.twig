{% extends 'layout.html.twig' %}

{% block title %}Socios{% endblock %}

{% block section %}
    <h2>Socios</h2>
    <!--<a href="#" class="btn btn-success"><i class="fa fa-plus"></i> Añadir alumno</a>




    -->
    <p></p>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>Nº Socio</th>
            <th>NIF</th>
            <th>Socios</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Nº Plantas</th>
            <th>Fecha de alta</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for socio in socios %}
            <tr>
                <td>{{ socio.id }}</td>
                <td>{{ socio.usuario.nif }}</td>
                <td>{{ socio.usuario.apellidos }}, {{ socio.usuario.nombre }}</td>
                <td>
                    {{ socio.usuario.direccion }} - {{socio.usuario.localidad}} ({{ socio.usuario.provincia }})
                </td>
                <td>{{ socio.usuario.telefono}}</td>
                <td>{% set sum = 0 %}
                    {% for i in socio.fincasPropiedad %}
                        {% set sum = sum + i.numPlantas %}
                    {% endfor %}{{ sum }}
            </td>
                <td>{{ socio.fechaAlta|date('d/m/Y') }}</td>
                <td>
                    <a href="https://www1.sedecatastro.gob.es/OVCFrames.aspx?TIPO=consulta" class="btn btn-xs btn-success col-sm-6" title="Listado de fincas del socios">
                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                    </a>
                    <a href="#" class="btn btn-xs btn-info col-sm-6" title="Modificar datos del socios">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="#" class="btn btn-xs btn-danger col-sm-6" title="Dar de baja">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}