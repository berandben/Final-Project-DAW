{% extends 'base.html.twig' %}
{% trans_default_domain 'nav' %}
{% block body %}
    {% set ruta = app.request.get('_route') %}
    {% block header %}
        <header>
            <nav class="navbar navbar-default navegacion">
                <div class="container">
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <a href="#" title="Entrar en la aplicación">
                                <i class="fa fa-user"></i> Entrar
                            </a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right menuOculto">
                        <li>
                            <button class="btn btn-outline-success my-2 my-sm-0" type="button" title="facebook">
                                <i class="fa fa-facebook" aria-hidden="true"></i>
                            </button>
                        </li>
                        <li>
                            <button class="btn btn-outline-success my-2 my-sm-0" type="button" title="twitter">
                                <i class="fa fa-twitter" aria-hidden="true"></i>
                            </button>
                        </li>
                        <li class="dropdown desplegable">
                            <button href="#" class="btn btn-outline-success my-2 my-sm-0 dropdown-toggle"
                                    data-toggle="dropdown" data-hover="dropdown">
                                <i class="fa fa-language"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="#">Español</a>
                                </li>
                                <li>
                                    <a href="#">Inglés</a>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown desplegable">
                            <button href="#" class="btn btn-outline-success my-2 my-sm-0 dropdown-toggle"
                                    data-toggle="dropdown" data-hover="dropdown">
                                <i class="fa fa-search"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <input class="form-control mr-sm-2" type="text" placeholder="Buscar" id="tbBuscar">
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
            <nav class="navbar navbar-inverse navegacion">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main">
                            <span class="sr-only">Desplegar</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <h3>Sociedad Cooperativa</h3>
                    </div>
                    <div class="collapse navbar-collapse" id="navbar-main">
                        <ul class="nav navbar-nav navbar-right">
                            <li {% if ruta == 'inicio' %} class="active" {% endif %}>
                                <a href="#">Inicio</a>
                            </li>
                            <li class="dropdown desplegable">
                                <a href="#">{{ 'nav.quienessomos'|trans }}</a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <p>Descripción del proyecto</p>
                                    </li>
                                </ul>
                            </li>
                            <li class="dropdown desplegable">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">Nuestros productos</a>
                                <ul class="dropdown-menu">
                                    {% for item in aceites %}
                                        <li><a href="#">{{ item }}</a></li>
                                        <li class="divider"></li>
                                    {% endfor %}
                                </ul>
                            </li>
                            <li>
                                <a href="#">Venta online</a>
                            </li>
                            <li>
                                <a href="#">Contacto</a>
                            </li>
                            <li>
                                <a href="#">Dónde encontrarnos</a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right navOculto">
                            <li>
                                <a href="#">
                                    <i class="fa fa-facebook"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-twitter"></i>
                                </a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-language"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="#">Español</a>
                                    </li>
                                    <li>
                                        <a href="#">Inglés</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-search"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <input class="form-control mr-sm-2" type="text" placeholder="Buscar" id="tbBuscar">
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    {% endblock %}
    {% block content %}
        {% block aside %}
        {% endblock %}
        {% block section %}
        {% endblock %}
    {% endblock %}
    {% block footer %}
        <footer class="navbar navbar-default">
            <div class="container">
            <ul class="nav navbar-nav navbar-left">
                <li>
                    <div>IES ORETANIA</div>
                    <div>Autor: Diego Hurtado Rosales</div>
                </li>
            </ul>
            <ul class="nav navbar navbar-right">
                <li>
                    <a href="#">Ir arriba</a>
                </li>
            </ul>
            </div>
        </footer>
    {% endblock %}
{% endblock %}
