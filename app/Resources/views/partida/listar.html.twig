{% extends 'layout.html.twig' %}

{% block title %}Partidas{% endblock %}

{% block section %}
    <div class="container">
        <h2>Listado de partidas</h2>
    </div>
    <div class="container">
        <table class="table table-bordered table-striped table-hover">
            <thead>
            <tr>
                <th>NÂº</th>
                <th>Fecha</th>
                <th>kg aceite</th>
                <th>Procedencia</th>
                <th>Lote</th>
                <th>Entregas</th>
            </tr>
            </thead>
            <tbody>
            {% for partida in partidas %}
                <tr>
                    <td>{{ partida.id }}</td>
                    <td>{{ partida.fechaFabricacion|date('d/m/Y') }}</td>
                    <td>{{ partida.cantidad }}</td>
                    <td>{% if partida.cantidad != 0 %}
                            {{ partida.entregas[0].procedencia.denominacion }}
                        {% endif %}
                    </td>
                    <td>{% if partida.lote != null %}
                            {{ partida.lote.id }}-{{ partida.lote.temporada }}
                        {% endif %}
                    </td>
                    <td>
                        <select name="slEntregas" id="slEntregas">
                            <option value="0"></option>
                            {% for entrega in partida.entregas %}
                                <option value="{{ entrega.finca.id }}" title="Detalles de la entrega"><a href="#">{{ entrega.id }}</a></option>
                            {% endfor %}
                        </select>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}