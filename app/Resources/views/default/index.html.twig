{% extends 'layout.html.twig' %}

{% block title %}
    Inicio
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/carrusel.css">
{% endblock %}

{% block aside %}
    <div class="contenedor">
        <div class="row">
            <!-- Carousel -->
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active">
                    {% for item in 0..titulos|length - 1 %}
                        <li data-target="#carousel-example-generic" data-slide-to="{{ item }}"></li>
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="{{ asset('images/presentacion.jpg') }}" alt="imagen 0" class="presentacion">
                        <div class="header-text hidden-xs">
                            <div class="col-md-12 text-center">
                                <h2>
                                    <span>El aceite de oliva es... <strong>VIDA</strong></span>
                                </h2>
                                <br>
                                <h3>
                                    <span>Recomendado en todas las dietas</span>
                                </h3>
                                <br>
                            </div>
                        </div>
                    </div>
                   {% for item in 0..titulos|length - 1 %}
                        <div class="item">
                            <img src="images/{{ fotos[item] }}" alt="imagen 0" class="presentacion">
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                    <h2>
                                        <span>{{ titulos[item] }}</span>
                                    </h2>
                                    <br>
                                    <h3>
                                        <span>{{ subtitulos[item] }}</span>
                                    </h3>
                                    <br>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div><!-- /carousel -->
        </div>
    </div>
{% endblock %}

{% block section %}
    <h1>Bienvenido</h1>
{% endblock %}