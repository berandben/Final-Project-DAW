{% form_theme formulario 'bootstrap_3_horizontal_layout.html.twig' %}
{% extends 'layout.html.twig' %}

{% block title %}Ventas{% endblock %}

{% block section %}
    {% include 'flash.html.twig' %}
    <div class="container">
        <h2 class="well">Añadir concepto</h2>
    </div>
    <div class="container well">
        <table class="table table-bordered table-responsive">
            <tr>
                <td>Factura Nº</td><td>{{ venta.numero }}-{{ venta.fecha|date('Y') }}</td>
            </tr>
            <tr>
                <td>Fecha</td><td>{{ venta.fecha|date('d/m/Y') }}</td>
            </tr>
        </table>
    </div>
    <div class="container well">
        {{ form_start(formulario) }}
        {{ form_row(formulario.cantidad) }}

        <div class="form-group">
            <label for="envasado" class="col-sm-2 control-label required">Envasado:</label>
            <div class="col-sm-10">
                <input type="radio" name="opcion" id="envasado" checked>
            </div>
        </div>
        <div class="form-group">
            <label for="granel" class="col-sm-2 control-label required">Granel:</label>
            <div class="col-sm-10">
                <input type="radio" name="opcion" id="granel">
            </div>
        </div>

        {{ form_row(formulario.producto) }}
        {{ form_row(formulario.lote) }}
            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <button type="submit" name="enviar" class="btn btn-default btnAceptar">
                        <i class="fa fa-check"></i> Aceptar
                    </button>
                    <a href="{{ path('ventas_listar_usuario', {'id' : venta.usuario.id}) }}" class="btn btn-default btnCancelar">
                        <i class="fa fa-times"></i> Cancelar
                    </a>
                </div>
            </div>
        {{ form_end(formulario) }}
    </div>
    {% block javascripts %}
        <script src="{{ asset('script/flash.js') }}"></script>
        <script src="{{ asset('script/linea.js') }}"></script>
    {% endblock %}
{% endblock %}