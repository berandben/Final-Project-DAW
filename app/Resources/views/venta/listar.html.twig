{% extends 'layout.html.twig' %}

{% block title %}Ventas{% endblock %}

{% block section %}
    <div class="container">
        <h2>Ventas</h2>
        {% if temporada != null %}
            <h3>Temporada: {{ temporada }}</h3>
        {% endif %}
        <a href="{{ path('ventas_nueva') }}" class="btn btn-default">
            <i class="fa fa-plus"></i> Nueva venta
        </a>
    </div>
    <div class="container">
        <table class="table table-bordered table-striped table-hover">
            <thead>
            <tr>
                <th>Nº</th>
                <th>Comprador</th>
                <th>Fecha</th>
                <th>Base Imponible €</th>
                <th>IVA %</th>
                <th>Importe €</th>
            </tr>
            </thead>
            <tbody>
            {% for venta in ventas %}
                <tr>
                    <td>{{ venta.numero }}-{{ venta.fecha|date('Y') }}</td>
                    <td>{{ venta.usuario }}</td>
                    <td>{{ venta.fecha|date('d/m/Y') }}</td>
                    <td>{% set baseImponible = venta.suma - (venta.suma * venta.descuento) %}
                        {{ baseImponible}}
                    </td>
                    <td>{{ venta.iva * 100 }}</td>
                    <td>{{ baseImponible * (1 + venta.iva) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}