{% extends 'layout.html.twig' %}

{% block title %}Clientes{% endblock %}

{% block section %}
    {% include 'flash.html.twig' %}
    <div class="container">
        <h2 class="well">Clientes</h2>
        <a href="{{ path('principal') }}" class="btn btn-default btnAceptar">
            <i class="fa fa-home"></i> Ir a principal
        </a>
    </div>
    <div class="container well">
        <table class="table table-responsive">
            <thead>
            <tr>
                <th>NIF</th>
                <th>Cliente</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Total facturado €</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for cliente in clientes %}
                {% if cliente.email != null %}
                <tr title="{{ cliente.email }}" class="clickable-row">
                {% else %}
                    <tr title="No tiene email" class="clickable-row">
                {% endif %}
                    <td>{{ cliente.nif }}</td>
                    <td>{{ cliente.nombre }} {{ cliente.apellidos }}</td>
                    <td>
                        {{ cliente.direccion }} - {{cliente.localidad}} ({{ cliente.provincia }})
                    </td>
                    <td>{{ cliente.telefono}}</td>
                    <td>
                        {% set suma = 0 %}
                        {% set sumaVenta = 0 %}
                        {% for venta in cliente.ventas %}
                            {% for linea in venta %}
                                {% set sumaVenta = sumaVenta + (linea.cantidad * linea.precio) - (linea.cantidad * linea.precio * linea.descuento) + ((linea.cantidad * linea.precio) - (linea.cantidad * linea.precio * linea.descuento) * linea.iva) %}
                            {% endfor %}
                            {% set suma = suma + sumaVenta  %}
                        {% endfor %}
                        {{ suma }}
                    </td>
                    <td>
                        <a href="{{ path('clientes_modificar', {'cliente' : cliente.id }) }}" class="btn btn-default btnAceptar btnOculto" title="Modificar datos">
                            <i class="fa fa-pencil"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% block javascripts %}
        <script src="{{ asset('script/flash.js') }}"></script>
        <script src="{{ asset('script/seleccionar_fila.js') }}"></script>
    {% endblock %}
{% endblock %}