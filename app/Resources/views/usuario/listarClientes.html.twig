{% extends 'layout.html.twig' %}

{% block title %}Clientes{% endblock %}

{% block section %}
    <div class="container">
        {% if app.session.flashBag.has('estado') %}
            {% set mensajes = app.session.flashBag.get('estado') %}
            {% for mensaje in mensajes %}
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                    {{ mensaje }}
                </div>
            {% endfor %}
        {% endif %}
        {% if app.session.flashBag.has('error') %}
            {% set mensajes = app.session.flashBag.get('error') %}
            {% for mensaje in mensajes %}
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                    {{ mensaje }}
                </div>
            {% endfor %}
        {% endif %}
    </div>
    <div class="container">
        <h2>Clientes</h2>
        <a href="{{ path('principal') }}" class="btn btn-default">
            <i class="fa fa-home"></i> Ir a principal
        </a>
    </div>
    <div class="container">
        <table class="table table-bordered table-striped table-hover table-responsive">
            <thead>
            <tr>
                <th>NIF</th>
                <th>Cliente</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Total facturado €</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for cliente in clientes %}
                <tr>
                    <td>{{ cliente.nif }}</td>
                    <td>{{ cliente.nombre }} {{ cliente.apellidos }}</td>
                    <td>
                        {{ cliente.direccion }} - {{cliente.localidad}} ({{ cliente.provincia }})
                    </td>
                    <td>{{ cliente.telefono}}</td>
                    <td>{{ cliente.email }}</td>
                    <td>
                        {% set suma = 0 %}
                        {% set sumaVenta = 0 %}
                        {% for venta in cliente.ventas %}
                            {% for linea in venta %}
                                {% set sumaVenta = sumaVenta + (linea.cantidad * linea.precio) - (linea.cantidad * linea.precio * linea.descuento) + ((linea.cantidad * linea.precio) - (linea.cantidad * linea.precio * linea.descuento) * linea.iva) %}
                            {% endfor %}
                            {% set suma = suma + sumaVenta  %}
                        {% endfor %}
                        {{ suma }}
                    </td>
                    <td>
                        <a href="{{ path('clientes_modificar', {'cliente' : cliente.id }) }}" class="btn btn-default">
                            <i class="fa fa-pencil"></i> Modificar datos
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}