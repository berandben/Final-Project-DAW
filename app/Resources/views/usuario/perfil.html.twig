{% form_theme formulario 'bootstrap_3_layout.html.twig' %}
{% extends 'layout.html.twig' %}
{% trans_default_domain 'usuario' %}

{% block title %}
    Cambiar perfil
{% endblock %}

{% block section %}
    {{ form_start(formulario) }}
    {{ form_widget(formulario) }}
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <button type="submit" name="enviar" class="btn btn-success"><i class="fa fa-check"></i>
                    Guardar
                </button>
            </div>
        </div>
    {{ form_end(formulario) }}
{% endblock %}